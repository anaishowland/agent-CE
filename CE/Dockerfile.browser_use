FROM us-central1-docker.pkg.dev/YOUR_PROJECT_ID/YOUR_REPO/neurosim-base:latest

ARG BROWSER_USE_BRANCH=main
ARG GH_TOKEN
ARG GH_REPO

ENV GOOGLE_CLOUD_PROJECT=YOUR_GCP_PROJECT_ID

WORKDIR /app

# Install git and playwright dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    libasound2 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libatspi2.0-0 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libglib2.0-0 \
    libnspr4 \
    libnss3 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxkbcommon0 \
    libxrandr2 \
    libxshmfence1 \
    libxss1 \
    libxtst6 \
    fonts-liberation \
    libappindicator3-1 \
    libcurl4 \
    libpci3 \
    libxrender1 \
    && rm -rf /var/lib/apt/lists/*

# Install playwright
# Playwright is a dependency of browser-use, so it should be installed.
RUN uv pip install --system playwright
# Install Playwright browser
RUN uv run playwright install chrome

# Clone and install browser-use
RUN if [ -n "$GH_TOKEN" ] && [ -n "$GH_REPO" ]; then \
        git clone --branch ${BROWSER_USE_BRANCH} --single-branch --depth 1 https://x-access-token:${GH_TOKEN}@github.com/${GH_REPO}.git browser-use; \
    else \
        git clone --branch ${BROWSER_USE_BRANCH} --single-branch --depth 1 https://github.com/browser-use/browser-use.git; \
    fi
WORKDIR /app/browser-use
RUN uv sync --dev
RUN uv pip install --system -e .
WORKDIR /app

# Copy BrowseruseEvaluation application code
COPY BrowseruseEvaluation/ ./BrowseruseEvaluation

# neurosim should already be available from base image

# Set up entrypoint
RUN chmod +x ./BrowseruseEvaluation/entry.sh
ENTRYPOINT ["./BrowseruseEvaluation/entry.sh"]
